<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>lv.martinsz.Liftoff</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0-or-later</project_license>

  <name>Liftoff</name>
  <summary>Create desktop launchers easily</summary>
  <description>
    <p>
      Liftoff is a simple and intuitive tool for creating desktop application launchers.
      With Liftoff, you can quickly generate .desktop files to add shortcuts for your
      applications to the applications menu.
    </p>
    <p>
      Features include:
    </p>
    <ul>
      <li>Easy-to-use interface for creating desktop entries</li>
      <li>Live preview of the .desktop file as you type</li>
      <li>Icon picker to select application icons</li>
      <li>Support for all standard desktop entry fields</li>
      <li>Automatically saves launchers to the correct location</li>
    </ul>
  </description>

  <developer id="lv.martinsz">
    <name>Martins Zeltins</name>
  </developer>

  <url type="homepage">https://github.com/martinszeltins/liftoff</url>
  <url type="vcs-browser">https://github.com/martinszeltins/liftoff</url>
  <url type="bugtracker">https://github.com/martinszeltins/liftoff/issues</url>

  <translation type="gettext">liftoff</translation>
  <!-- All graphical applications having a desktop file must have this tag in the MetaInfo.
     If this is present, appstreamcli compose will pull icons, keywords and categories from the desktop file. -->
  <launchable type="desktop-id">lv.martinsz.Liftoff.desktop</launchable>
  <!-- Use the OARS website (https://hughsie.github.io/oars/generate.html) to generate these and make sure to use oars-1.1 -->
  <content_rating type="oars-1.1" />

  <!-- Applications should set a brand color in both light and dark variants like so -->
  <branding>
    <color type="primary" scheme_preference="light">#ff00ff</color>
    <color type="primary" scheme_preference="dark">#993d3d</color>
  </branding>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/martinszeltins/liftoff/main/screenshots/screenshot1.png</image>
      <caption>Create desktop launchers with an easy-to-use interface</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release version="1.0.0" date="2025-12-28">
      <description translate="no">
        <p>Initial release of Liftoff</p>
        <ul>
          <li>Create desktop launchers with an intuitive interface</li>
          <li>Live preview of .desktop files</li>
          <li>Icon picker for selecting application icons</li>
          <li>Support for all standard desktop entry fields</li>
        </ul>
      </description>
    </release>
  </releases>

</component>
